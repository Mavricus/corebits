{
  "name": "@flex-platform/template",
  "version": "0.0.1",
  "description": "Flex Platform Template package",
  "author": "Mavricus",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mavricus/flex-platform",
    "directory": "packages/template"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:staged": "lint-staged",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --config jest.config.js",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch --config jest.config.js",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --config jest.config.js",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@flex-platform/eslint-config": "workspace:*",
    "@flex-platform/typescript-config": "workspace:*"
  }
}
