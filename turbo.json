{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "build"
      ]
    },
    "lint:staged": {
      "dependsOn": [
        "build"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "lint"
      ]
    }
  }
}
